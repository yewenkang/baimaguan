/* pages/actdetial/actdetial.wxss */
page{
  background: #F3F3F3;
}
page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab{
  height: auto;
}
.weui-navbar__slider{
  width: 33%;
}
.headimg{
  width: 100%;
  height: 400rpx;
  position: relative;
}
.imgtext{
  position: absolute;
  height: 60rpx;
  width: 50%;
  text-align: left;
  color: #ffffff;
  bottom: 0;
  left: 20rpx;
  font-size: 28rpx;
  line-height: 60rpx;
}
.info{
  height: 150rpx;
  width: 100%;
  background: #ffffff;
  margin-bottom: 10rpx;
  font-size: 32rpx;
}
.infotab{
  height: 100%;
  width: 33.33%;
  float: left;
  text-align: center;
}
.infodata{
  width: 100%;
  height: 75rpx;
  font-size: 32rpx;
  font-weight: 700;
  line-height: 100rpx;
}
.infoint{
  width: 100%;
  height: 75rpx;
  font-size: 26rpx;
  color: #d3d3d3;
}
.list{
  width: 710rpx;
  padding: 20rpx;
  height: 120rpx;
  background: #ffffff;
  border-bottom:2rpx solid #F3F3F3;
}
.list:last-child{
  margin-bottom: 80rpx;
}
.listmingci{
  height: 100%;
  width: 80rpx;
  float: left;
  line-height: 120rpx;
  text-align: center;
  font-weight: 700;
}
.listhead{
  height: 100%;
  width: 120rpx;
  float: left;
}
.listimg{
  height: 100%;
  width: 100%;
  border-radius: 100%;
}
.listname{
  width: 300rpx;
  padding: 10rpx;
  height: 100%;
  line-height: 120rpx;
  float: left;
  overflow: hidden;
}
.listlast{
  width: 190rpx;
  height: 100%;
  line-height: 120rpx;
  float: right;
  text-align: right;
  color: #d3d3d3;
}
.baoming{
  height: 80rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  background: #26B8F2;
  color: #ffffff;
  text-align: center;
  line-height: 80rpx;
  font-weight: 700;
}
.baomingend{
  height: 80rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  background: #d3d3d3;
  color: #ffffff;
  text-align: center;
  line-height: 80rpx;
  font-weight: 700;
}
.liststep{
  float: left;
  width: 300rpx;
  height: 100%;
  line-height: 120rpx;
  text-align: center;
}
.listdate{
  height: 100%;
  width: 220rpx;
  float: left;
  line-height: 120rpx;
  text-align: center;
  font-weight: 700;
}

.paim{
  width: 28px;
  height: 30px;
  vertical-align: middle;
}